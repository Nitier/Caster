{
  "name": "nitier/caster",
  "description": "Strict, convenient casting helpers for PHP (mixed -> typed).",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Nitier\\Caster\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1.2",
    "phpstan/phpstan": "^2.1.12",
    "squizlabs/php_codesniffer": "^3.12.0",
    "league/commonmark": "^2.7"
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit  --configuration phpunit.xml",
    "cs": "phpcs --standard=.phpcs.xml src",
    "cs-fix": "phpcbf --standard=.phpcs.xml src",
    "stan": "phpstan analyse",
    "console": "php bin/console.php"
  }
}
